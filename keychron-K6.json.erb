{
    "title": "Custumization for Keychron K6",
    "rules": [
        {
            "description": "Map escapce to ` and map ctrl + escape to escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape"
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "mandatory": ["left_control"]
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        }
    ]
}
